{
  "expo": {
    "name": "MindFlow",
    "slug": "MindFlow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "useNextNotificationsApi": true,
      "useNextCameraApi": true,
      "useNextImagePickerApi": true,
      "useNextMediaLibraryApi": true,
      "useNextStorageApi": true,
      "useNextDeviceMotionApi": true,
      "useNextKeyboardApi": true,
      "useNextLinkingApi": true,
      "useNextClipboardApi": true,
      "useNextFilesystemPublicDirectoryApi": true,
      "useNextFilesystemDownloadAsyncApi": true,
      "useNextFilesystemUploadAsyncApi": true,
      "useNextFilesystemDeleteAsyncApi": true,
      "useNextFilesystemMakeDirectoryAsyncApi": true,
      "useNextFilesystemReadDirectoryAsyncApi": true,
      "useNextFileSystemSessionTypeApi": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
